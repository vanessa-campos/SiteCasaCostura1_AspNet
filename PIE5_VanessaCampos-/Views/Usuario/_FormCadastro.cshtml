@model Usuario

<div class="row justify-content-md-around pt-3 pb-5">    
    <form asp-action="Cadastro" method="POST" class="col-md-6 col-sm-4">
        <input type="hidden" asp-for="Id" />
        <fieldset>                                  
            <div class="row">         
                <div class="form-group col-md-6 col-sm-12">
                    <label asp-for="Login">Login</label>
                    <input type="email" asp-for="Login" class="form-control" required/>
                </div>
                <div class="form-group col-md-6 col-sm-12">
                   <label asp-for="Senha">Senha</label>
                   <input type="password" asp-for="Senha" class="form-control" required/>
                </div>  
            </div>   
            <div class="row">
                <div class="form-group col-12">
                    <label asp-for="Nome">Nome Completo</label>
                    <input asp-for="Nome" class="form-control" required/>
                </div> 
            </div>                           
            <div class="row">
                <div class="form-group col-md-4 col-sm-5">
                    <label asp-for="DataNascimento">Data de Nascimento</label>
                    <input type="date" asp-for="DataNascimento" max="2003-12-31" class="form-control"/>
                </div>             
                <div class="form-group col-md-4 col-sm-4">
                    <label asp-for="Telefone">Telefone</label>
                    <input type="tel" asp-for="Telefone" class="form-control" placeholder="(XX) XXXXX-XXXX" pattern="[0-9]{2}[0-9]{5}[0-9]{4}"/>
                </div>  
                <div class="form-group col-md-4 col-sm-3">
                    <label asp-for="Cep">CEP</label>
                    <input asp-for="Cep" class="form-control" placeholder="XXXXX-XXX" pattern="[0-9]{5}[0-9]{3}"/>
                </div> 
            </div>              
            <div class="row">
                <div class="form-group col-12">
                    <label asp-for="Endereco">Endere√ßo Completo</label>
                    <input asp-for="Endereco" class="form-control"/>
                </div> 
            </div>        
        </fieldset>
        <input type="submit" value="Salvar"  class="btn btn-light text-white text-start" style="background-color: #f06eaa;"/>
    </form>
</div>