@model Atendimento
@{
    ViewData["Title"] = "Fale Conosco";
}

<div class="row">    
  <div class="col p-5 justify-content-center">
    <h1 class="text-center my-2" style="color: #f06eaa"><b>FALE CONOSCO</b></h1>
    <div class="row justify-content-md-center">
        <form asp-action="Solicitar" method="POST" class="col-md-4 pt-3">
            <fieldset>
                <div class="form-group">
                    <input asp-for="Nome" class="form-control" placeholder="Nome: " required/>
                </div>                     
                <div class="form-group">
                    <input type="email" asp-for="Email" class="form-control" placeholder="E-mail: " required/>
                </div>
                <div class="form-group">
                    <input type="tel" asp-for="Telefone" class="form-control" placeholder="Telefone: (XX) XXXXX-XXXX" pattern="[0-9]{2}[0-9]{5}[0-9]{4}" required/>
                </div>            
                <div class="form-group">
                    <textarea rows="5" asp-for="Mensagem" class="form-control" placeholder="Deixe sua mensagem: " required></textarea>
                </div>
            </fieldset>
            <input type="submit" value="Enviar" class="btn btn-light text-white" style="background-color: #f06eaa;"/>
        </form>
    </div>
  </div>
</div>
